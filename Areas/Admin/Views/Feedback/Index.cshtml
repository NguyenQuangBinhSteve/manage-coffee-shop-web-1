@model IEnumerable<manage_coffee_shop_web.Models.Feedback>

@{
    ViewData["Title"] = "Quản lý phản hồi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <!-- No Create action for feedback by Admin, handled by users -->
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>UserName</th>
            <th>Content</th>
            <th>Rating</th>
            <th>CreatedAt</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@(item.ApplicationUser?.Name ?? "Người dùng ẩn danh")</td>
                <td>@(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)</td>
                <td>@item.Rating</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Xem</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline"
                          onsubmit="return confirm('Bạn có muốn xóa phản hồi này không?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Existing table and pagination code -->
@if (TempData["DeleteSuccess"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DeleteSuccess"]
    </div>
}
@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeleteError"]
    </div>
}