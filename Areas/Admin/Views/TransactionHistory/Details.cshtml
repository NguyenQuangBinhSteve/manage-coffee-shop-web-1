@model manage_coffee_shop_web.Models.Order

@{
    ViewData["Title"] = "Transaction Details";
}

<h1>Transaction Details</h1>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Order Information</h5>
        <ul class="list-group">
            <li class="list-group-item"><strong>Order ID:</strong> @Model.Id</li>
            <li class="list-group-item"><strong>Customer:</strong> @Model.ApplicationUser?.UserName</li>
            <li class="list-group-item"><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</li>
            <li class="list-group-item"><strong>Total Amount:</strong> @($"{Model.TotalAmount:N0} ₫")</li>
            <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
        </ul>
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Order Details</h5>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.OrderDetails)
                {
                    <tr>
                        <td>@detail.Product?.Name</td>
                        <td>@detail.Quantity</td>
                        <td>@($"{detail.Price:N0} ₫")</td>
                        <td>@($"{(detail.Quantity * detail.Price):N0} ₫")</td>
                        <td>@detail.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>