<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - manage_coffee_shop_web</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="page-wrapper">
        <!-- Header -->
        <header class="header">
            <div class="container-fluid">
                <!-- Navigation Section -->
                <div class="nav-section">
                    <nav class="navbar">
                        <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center">
                            <img src="~/images/Logo/Logo.png" alt="Coffee Shop Logo" class="logo" />
                            <span class="brand-name">CHICKEN COFFEE</span>
                        </a>

                        <a asp-controller="Home" asp-action="Index" asp-fragment="home">Giới Thiệu</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment="about">Về Chúng Tôi</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment="menu">Coffee Quán</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment="products">Sản Phẩm</a>
                        <a asp-controller="Product" asp-action="Category">Danh Mục</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment="contact">Liên Hệ</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment="blogs">Blogs</a>

                        <div class="buttons d-flex align-items-center">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-auth me-2">Login</a>
                                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-auth">Register</a>
                            }
                            else
                            {
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-area="Admin" asp-controller="AdminDashBoard" asp-action="Index" class="btn-panel-admin me-2">PanelAdmin</a>
                                }
                                <a asp-controller="User" asp-action="History" class="btn btn-auth me-2">Lịch Sử</a>
                            }

                            <!-- User Info & Logout (sau khi đăng nhập) -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="nav-user d-flex align-items-center ms-3">
                                    <span class="username">User: @User.Identity.Name | <a asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a></span>
                                    <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-logout ms-2">Exit</a>
                                </div>
                            }

                            <!-- Cart Dropdown -->
                            <div class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle" href="#" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-shopping-cart"></i> (<span id="cartCount">0</span>)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cartDropdown" style="right: 0; left: auto;">
                                    @if (ViewBag.Cart != null && ViewBag.Cart.CartItems != null)
                                    {
                                        var cartItems = ((IEnumerable<CartItem>)ViewBag.Cart.CartItems);
                                        var recentItems = cartItems.OrderByDescending(ci => ci.Id).Take(3);
                                        foreach (var item in recentItems)
                                        {
                                            <li><a class="dropdown-item" href="#">@item.Product.Name - @item.Quantity x @string.Format("{0:N0} VNĐ", item.Price)</a></li>
                                        }
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" href="#">Giỏ hàng trống</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Checkout", "Product")">Check Out</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("CartDetail", "Product")">View Cart</a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </header>


        <!-- Main Content -->
        <div class="main-content flex-fill">
            <main role="main">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="footer bg-dark text-white text-center py-3">
            <p>&copy; 2025 - manage_coffee_shop_web | All rights reserved</p>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var cart = @Html.Raw(Json.Serialize(ViewBag.Cart));
        if (cart && cart.cartItems) {
            document.getElementById('cartCount').textContent = cart.cartItems.length;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>