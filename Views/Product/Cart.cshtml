@model manage_coffee_shop_web.Models.Cart

<style>
    :root {
        --main-color: #8B4513; /* Warm coffee brown */
        --text-color: #4A2C2A; /* Dark brown for text */
        --bg-color: #F5E8C7; /* Light beige background */
        --highlight-color: #D2B48C; /* Tan for highlights */
        --border-color: rgba(139, 69, 19, 0.2); /* Subtle border */
    }

    body {
        background-color: var(--bg-color);
        font-family: Arial, sans-serif;
        color: var(--text-color);
    }

    h2 {
        text-align: center;
        font-size: 1.8rem;
        font-weight: bold;
        color: var(--main-color);
        margin: 2rem 0;
        border-bottom: 2px solid var(--highlight-color);
        padding-bottom: 0.3rem;
        display: block; /* mặc định rồi nhưng ghi cho chắc */
        width: 100%; /* chiếm hết chiều ngang */
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
        background: #fff;
        border: 1px solid var(--border-color);
    }

        .cart-table th,
        .cart-table td {
            padding: 0.75rem;
            border: 1px solid var(--border-color);
            text-align: left;
        }

        .cart-table th {
            background-color: var(--highlight-color);
            color: var(--text-color);
        }

    .total {
        font-weight: bold;
        font-size: 1.1rem;
        margin-top: 1rem;
    }

    .btn-primary {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--main-color);
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #6e3510; /* darker coffee shade */
        }
</style>

<h2>Giỏ Hàng</h2>

@if (Model.CartItems.Any())
{
    <table class="cart-table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@string.Format("{0:N0} VNĐ", item.Price)</td>
                    <td>@string.Format("{0:N0} VNĐ", item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <p class="total">
        Tổng cộng: @string.Format("{0:N0} VNĐ", Model.CartItems.Sum(ci => ci.Price * ci.Quantity))
    </p>
}
else
{
    <p>Giỏ hàng trống.</p>
}

<a href="@Url.Action("CartDetail", "Product")" class="btn-primary">Xem Chi Tiết</a>
