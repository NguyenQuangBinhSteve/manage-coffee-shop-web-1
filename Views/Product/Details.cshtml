@model manage_coffee_shop_web.Models.Product

@{
    ViewData["Title"] = "Product Details - " + Model.Name;
}

<div class="container mt-5">
    <div class="row product-detail">
        <div class="col-md-6">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h2>@Model.Name</h2>
            <p class="price">@string.Format("{0:N0} VNĐ", Model.Price)</p>
            <p class="description">@Model.Description</p>

            <div class="d-flex gap-3 mt-3">
                <a href="@Url.Action("Index", "Product")" class="btn-secondary-coffee">⬅ Quay lại</a>
                <a href="@Url.Action("AddToCart", "Product", new { id = Model.Id })" class="btn-coffee add-to-cart" data-id="@Model.Id">🛒 Thêm vào giỏ</a>
            </div>
        </div>
    </div>

    <!-- Feedback Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h3>Phản hồi</h3>
            <!-- Notification -->
            @if (TempData["FeedbackSuccess"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["FeedbackSuccess"]
                </div>
            }
            @if (TempData["FeedbackError"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["FeedbackError"]
                </div>
            }

            <!-- Feedback Form (for authenticated users) -->
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-action="CreateFeedback" asp-controller="Product" method="post" class="mt-3">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="comment">Bình luận của bạn</label>
                        <textarea name="comment" id="comment" class="form-control" maxlength="500" rows="3" required></textarea>
                    </div>
                    <div class="form-group mt-2">
                        <label for="rating">Đánh giá (1-5 sao)</label>
                        <select name="rating" id="rating" class="form-control" required>
                            <option value="">Chọn đánh giá</option>
                            <option value="1">★☆☆☆☆ (1)</option>
                            <option value="2">★★☆☆☆ (2)</option>
                            <option value="3">★★★☆☆ (3)</option>
                            <option value="4">★★★★☆ (4)</option>
                            <option value="5">★★★★★ (5)</option>
                        </select>
                    </div>
                    <button type="submit" class="btn-coffee mt-2">Gửi phản hồi</button>
                </form>
            }
            else
            {
                <p class="text-muted">Vui lòng <a asp-action="Login" asp-controller="Account">đăng nhập</a> để gửi phản hồi.</p>
            }

            <!-- Display Existing Feedback -->
            <div class="mt-4">
                <h4>Phản hồi từ người dùng</h4>
                @if (ViewBag.Feedbacks != null && ((System.Collections.IEnumerable)ViewBag.Feedbacks).GetEnumerator().MoveNext())
                {
                    foreach (var feedback in ViewBag.Feedbacks as List<Feedback>)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <p class="card-text"><strong>@(feedback.ApplicationUser?.Name ?? "Người dùng ẩn danh"):</strong> @feedback.Comment</p>
                                <p class="card-text"><small>Đánh giá: @string.Concat(Enumerable.Repeat("★", feedback.Rating))@(string.Concat(Enumerable.Repeat("☆", 5 - feedback.Rating))) (@feedback.Rating/5)</small></p>
                                <p class="card-text"><small>Ngày: @feedback.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small></p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Chưa có phản hồi nào cho sản phẩm này.</p>
                }
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --main-color: #8B4513;
        --text-color: #4A2C2A;
        --bg-color: #F5E8C7;
        --highlight-color: #D2B48C;
        --border-color: 0.1rem solid rgba(139, 69, 19, 0.2);
    }

    .container {
        max-width: 1200px;
    }

    .product-detail img {
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
    }

    .price {
        font-size: 1.5rem;
        color: var(--main-color);
        font-weight: bold;
    }

    .description {
        color: var(--text-color);
    }

    .btn-coffee {
        background-color: var(--highlight-color);
        color: var(--text-color);
        border: 1px solid var(--text-color);
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-coffee:hover {
            background-color: var(--bg-color);
            font-weight: 600;
        }

    .btn-secondary-coffee {
        background-color: #D2B48C;
        color: var(--text-color);
        border: 1px solid var(--text-color);
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-secondary-coffee:hover {
            background-color: #F5E8C7;
            font-weight: 600;
        }

    .form-control {
        width: 100%;
        padding: 0.6rem;
        border: var(--border-color);
        border-radius: 8px;
    }

    .alert {
        padding: 0.75rem 1.25rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        text-align: center;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .card {
        background-color: #F5E8C7;
        border: var(--border-color);
        border-radius: 8px;
    }
</style>