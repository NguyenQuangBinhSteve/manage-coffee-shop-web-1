@model manage_coffee_shop_web.Models.Product

@{
    ViewData["Title"] = "Product Details - " + Model.Name;
}

<!-- Notification Partial -->
<partial name="_Notification" />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="price">@Model.Price</p>
            <p class="description">@Model.Description</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to Products</a>
            <a href="#" class="btn btn-success add-to-cart mt-2" data-id="@Model.Id">Add to Cart</a>
        </div>
    </div>
</div>